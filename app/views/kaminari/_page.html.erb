<% if page.current? %>
  <span class="px-4 py-2 bg-green-500 text-white rounded-lg font-bold shadow-md">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, remote: remote, rel: page.rel, class: "px-4 py-2 bg-white text-gray-700 border border-gray-200 rounded-lg hover:bg-green-50 hover:text-green-600 transition-colors" %>
<% end %>