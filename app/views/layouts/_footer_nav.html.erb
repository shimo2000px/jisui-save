<div class="fixed bottom-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-t border-orange-100/50 pb-safe md:hidden shadow-[0_-5px_20px_rgba(251,146,60,0.05)]">
  <div class="flex items-center h-16 relative">
    
    <%= link_to root_path, class: "flex-1 flex flex-col items-center gap-0.5 transition-colors #{current_page?(root_path) ? 'text-orange-600' : 'text-stone-400'}" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
      <span class="text-[10px] font-bold">ホーム</span>
    <% end %>

    <%= link_to new_recipe_path, class: "flex-1 flex flex-col items-center transition-transform active:scale-90 relative" do %>
      <div class="absolute -top-10 bg-gradient-to-br from-orange-400 to-orange-600 p-4 rounded-full shadow-lg shadow-orange-200 border-4 border-white text-white">
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
      </div>
      <div class="mt-8 flex flex-col items-center">
        <span class="text-[10px] font-bold text-orange-600">投稿</span>
        <% if guest_user? %>
          <span class="text-[8px] opacity-70 leading-none">要登録</span>
        <% end %>
      </div>
    <% end %>

    <%= link_to profile_path, class: "flex-1 flex flex-col items-center gap-0.5 transition-colors #{current_page?(profile_path) ? 'text-orange-600' : 'text-stone-400'}" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      <span class="text-[10px] font-bold">マイページ</span>
      <% if guest_user? %>
        <span class="text-[8px] opacity-70 leading-none">要登録</span>
      <% end %>
    <% end %>

  </div>
</div>