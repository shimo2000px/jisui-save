<div class="grid grid-cols-10 gap-2 items-center ingredient-row">
  <div class="col-span-4 bg-white rounded p-1 shadow-sm">
    <% options = Ingredient.all.map { |i| [i.name, i.id, { data: { price_per_gram: i.price_per_gram } }] } %>
    <%= f.select :ingredient_id, options, { include_blank: "選択..." }, 
        { class: "w-full border-none focus:ring-0 text-sm", data: { action: "change->recipe-calculation#calculate" } } %>
  </div>
  
  <div class="col-span-2 bg-white rounded p-1 shadow-sm flex items-center">
    <%= f.number_field :amount_gram, class: "w-full border-none focus:ring-0 text-center", 
        data: { action: "input->recipe-calculation#calculate" } %>
    <span class="text-[10px] text-gray-400 mr-1">g</span>
  </div>

  <div class="col-span-3 bg-white rounded p-1 shadow-sm">
    <%= f.number_field :custom_price, class: "w-full border-none focus:ring-0 text-sm", placeholder: "特売品など",
        data: { action: "input->recipe-calculation#calculate" } %>
  </div>

  <div class="col-span-1 text-center">
    <%# 削除ボタン %>
    <button type="button" data-action="click->recipe-calculation#remove" class="text-gray-400 hover:text-red-500 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    </button>
    <%# Railsで削除を扱うための隠しフィールド（既存データ削除用） %>
    <%= f.hidden_field :_destroy if f.object&.respond_to?(:persisted?) && f.object.persisted? %>  </div>
</div>