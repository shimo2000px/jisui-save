<div class="max-w-6xl mx-auto mt-6 md:mt-10 mb-20 px-4">
  <%# --- ヘッダー & フィルターセクション --- %>
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 md:mb-10 gap-4">
    <div>
      <h1 class="text-2xl md:text-3xl font-extrabold text-gray-900 tracking-tight">
        <%= @current_filter == "mine" ? "MYレシピ" : "みんなのレシピ" %>
      </h1>
      <p class="text-gray-500 text-xs md:text-sm mt-1">
        <%= @current_filter == "mine" ? "あなたが作成したレシピ" : "みんなの公開レシピをチェック！" %>
      </p>
    </div>

    <div class="flex items-center gap-3 w-full md:w-auto">
      <%# 公開/自分切り替えタブ %>
      <div class="flex flex-1 md:flex-none bg-gray-100 p-1 rounded-xl shadow-inner">
        <%= link_to "公開レシピ", recipes_path(filter: "public"), 
            class: "flex-1 md:flex-none md:w-32 py-2 rounded-lg text-xs md:text-sm font-bold text-center transition-all #{@current_filter == "public" ? "bg-white text-green-600 shadow-sm" : "text-gray-500 hover:text-gray-700"}" %>
        <%= link_to "MYレシピ", recipes_path(filter: "mine"), 
            class: "flex-1 md:flex-none md:w-32 py-2 rounded-lg text-xs md:text-sm font-bold text-center transition-all #{@current_filter == "mine" ? "bg-white text-green-600 shadow-sm" : "text-gray-500 hover:text-gray-700"}" %>
      </div>

      <%# 新規作成ボタン (スマホではアイコンメインにしても良い) %>
      <%= link_to new_recipe_path, class: "inline-flex items-center px-4 py-2.5 font-bold text-white bg-green-500 rounded-xl hover:bg-green-600 shadow-lg transition-all text-sm" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
        作る
      <% end %>
    </div>
  </div>

  <%# --- レシピ一覧グリッド (スマホ2列: grid-cols-2) --- %>
  <div class="grid grid-cols-2 lg:grid-cols-3 gap-3 md:gap-10">
    <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
        <div class="flex flex-col bg-white rounded-2xl md:rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300 group relative overflow-hidden">
          
          <%# 画像セクション %>
          <div class="relative overflow-hidden aspect-square md:aspect-[4/3]"> 
            <%= link_to recipe_path(recipe) do %>
              <% if recipe.image.attached? %>
                <%= image_tag recipe.image, class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% else %>
                <div class="w-full h-full bg-gray-100 flex items-center justify-center text-gray-400 text-xs">No Image</div>
              <% end %>
            <% end %>

            <%# 節約額バッジ (スマホではコンパクトに) %>
            <div class="absolute top-2 left-2 md:top-4 md:left-4 bg-orange-500/90 backdrop-blur-sm text-white py-0.5 px-2 md:py-1 md:px-4 rounded-lg md:rounded-full shadow-lg">
              <span class="hidden md:inline text-[10px] font-bold uppercase tracking-wider mr-1">節約</span>
              <span class="text-sm md:text-xl font-black">¥<%= number_with_delimiter(recipe.savings_amount) %></span>
            </div>
            <% if @current_filter == "mine" && !recipe.is_public? %>
              <div class="absolute top-2 right-2 bg-gray-900/60 backdrop-blur-md text-white p-1.5 rounded-lg shadow-sm flex items-center justify-center">
                <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                <%# PCサイズ時のみ「非公開」の文字を出す %>
                <span class="hidden md:inline text-[10px] font-bold ml-1">非公開</span>
              </div>
            <% end %>
          </div>

          <%# --- コンテンツセクション --- %>
          <div class="p-3 md:p-6 flex-grow flex flex-col">
            <h2 class="text-sm md:text-2xl font-bold text-gray-900 mb-2 line-clamp-2 md:line-clamp-none transition-colors group-hover:text-green-600">
              <%= link_to recipe.title, recipe_path(recipe) %>
            </h2>
            
            <%# 金額比較エリア (スマホでも2項目表示) %>
            <div class="mt-auto p-2 bg-gray-50 rounded-xl">
              <%# 自炊コスト %>
              <div class="flex justify-between items-baseline border-b border-gray-200/50 pb-1 mb-1">
                <span class="text-[8px] md:text-[10px] text-gray-400 font-bold uppercase">自炊</span>
                <span class="text-xs md:text-lg font-black text-emerald-600">
                  ¥<%= number_with_delimiter(recipe.total_cost) %>
                </span>
              </div>
              
              <%# コンビニ価格（比較対象） %>
              <div class="flex justify-between items-baseline">
                <span class="text-[8px] md:text-[10px] text-gray-400 font-bold uppercase truncate mr-1">
                  <%= recipe.convenience_food&.name || "外食" %>
                </span>
                <span class="text-[10px] md:text-sm font-bold text-gray-400 line-through">
                  ¥<%= number_with_delimiter(recipe.convenience_food&.price || 0) %>
                </span>
              </div>
            </div>
          </div>

          <%# --- アクションセクション --- %>
          <div class="p-3 pt-0 mt-2 md:mt-0">
            <%= render "cooking_button", recipe: recipe %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-span-full py-20 text-center text-gray-400">表示できるレシピがまだありません。</div>
    <% end %>
  </div>

  <div class="mt-12 mb-10 flex justify-center">
    <%= paginate @recipes %>
  </div>
</div>