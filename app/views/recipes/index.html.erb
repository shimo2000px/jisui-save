<div class="min-h-screen bg-orange-50/50 py-8 px-4">
  <div class="max-w-3xl mx-auto space-y-4">
    
    <h2 class="text-2xl font-bold text-gray-800 text-center mb-8">公開レシピ一覧</h2>

    <% @recipes.each do |recipe| %>
      <div class="bg-white rounded-2xl shadow-sm border border-orange-100 flex items-center p-4 hover:shadow-md transition-shadow">
        
        <div class="flex-shrink-0 w-24 h-24 sm:w-32 sm:h-32 bg-orange-100 rounded-xl flex items-center justify-center text-4xl">
          <%= recipe[:image] %>
        </div>

        <div class="flex-grow ml-4 sm:ml-6">
          <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1">
            <%= recipe[:title] %>
          </h3>
          <p class="text-orange-600 font-bold text-base sm:text-lg">
            ¥<%= recipe[:cost] %>
          </p>
        </div>

        <div class="flex-shrink-0 ml-2">
          <button class="bg-orange-400 hover:bg-orange-500 text-white font-bold py-2 px-4 sm:px-6 rounded-full text-sm sm:text-base shadow-sm transition-colors">
            作った！
          </button>
        </div>

      </div>
    <% end %>

  </div>
</div>