<div class="max-w-5xl mx-auto my-12 px-4">
  <%# --- 1. ヘッダーセクション --- %>
  <div class="mb-8 text-center">
    <h1 class="text-4xl font-black text-gray-900 mb-4"><%= @recipe.title %></h1>
    <p class="text-gray-500"><%= @recipe.description %></p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
    <div class="lg:col-span-2 space-y-12">
      <div class="rounded-3xl overflow-hidden shadow-xl aspect-video bg-gray-100 relative">
        <% if @recipe.image.attached? %>
          <%= image_tag @recipe.image, class: "w-full h-full object-cover" %>
        <% else %>
          <%= image_tag "default_recipe.png", class: "w-full h-full object-cover opacity-90" %>
          <div class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none">
            <span class="text-5xl mb-2">🍳</span>
            <span class="text-xs font-bold text-orange-400 tracking-widest bg-white/80 px-4 py-1.5 rounded-full backdrop-blur-sm shadow-sm">
              NO IMAGE
            </span>
          </div>
        <% end %>
      </div>

      <%# 材料リスト %>
      <div>
        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
          <span class="w-1.5 h-8 bg-green-500 rounded-full"></span>
          材料
        </h3>
        <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden">
          <table class="w-full text-left">
            <thead class="bg-gray-50 text-gray-500 text-sm">
              <tr>
                <th class="px-6 py-4 font-bold">食材</th>
                <th class="px-6 py-4 font-bold text-right">分量</th>
                <th class="px-6 py-4 font-bold text-right">コスト</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-50">
              <% @recipe.recipe_ingredients.each do |ri| %>
                <tr>
                  <td class="px-6 py-4 font-medium text-gray-700"><%= ri.ingredient.name %></td>
                  <td class="px-6 py-4 text-right text-gray-500"><%= ri.amount_gram %>g</td>
                  <td class="px-6 py-4 text-right font-bold text-emerald-600">¥<%= number_with_delimiter(ri.total_price) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <%# 作り方の手順 %>
      <div>
        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
          <span class="w-1.5 h-8 bg-blue-500 rounded-full"></span>
          作り方
        </h3>
        <div class="space-y-6">
          <% (@recipe.steps.presence || "手順はまだ登録されていません").split("\n").each_with_index do |step, index| %>
            <div class="flex gap-6 p-6 bg-white rounded-2xl border border-blue-100/50">
              <span class="flex-shrink-0 w-10 h-10 bg-blue-500 text-white rounded-full flex items-center justify-center font-black shadow-md">
                <%= index + 1 %>
              </span>
              <p class="text-gray-700 leading-relaxed pt-1"><%= step %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# --- 右カラム（節約・比較スコア） --- %>
    <div class="space-y-6">
      <div class="sticky top-10">
        <div class="bg-gradient-to-br from-orange-500 to-red-500 rounded-3xl p-8 text-white shadow-2xl overflow-hidden relative">
          <div class="relative z-10">
            <h4 class="text-sm font-bold uppercase tracking-widest opacity-80 mb-2">今回の節約額</h4>
            <div class="text-5xl font-black mb-6">¥<%= number_with_delimiter(@recipe.savings_amount) %> <span class="text-xl">OFF!</span></div>
            
            <div class="space-y-4 pt-6 border-t border-white/20">
              <div class="flex justify-between items-center">
                <span class="text-sm opacity-80">コンビニで購入</span>
                <span class="font-bold">¥<%= number_with_delimiter(@recipe.convenience_food&.price || 0) %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm opacity-80">自炊合計</span>
                <span class="font-bold text-yellow-300 text-xl">¥<%= number_with_delimiter(@recipe.total_cost) %></span>
              </div>
            </div>
          </div>
          <%# 背景の飾りデコレーション %>
          <div class="absolute -right-10 -bottom-10 w-40 h-40 bg-white/10 rounded-full blur-3xl"></div>
        </div>

        <%# アクションボタン %>
        <div class="mt-8 space-y-4">
            <%= render "cooking_button", recipe: @recipe %>        
          
          <%= link_to copy_recipe_path(@recipe), class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-black py-4 rounded-2xl shadow-lg transition-all flex items-center justify-center gap-3" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
            </svg>
            このレシピを元に作成
            <% if guest_user? %>
              <span class="text-[10px] opacity-70 ml-1">(要登録)</span>
            <% end %>
          <% end %>

          <% if @recipe.user == current_user %>
            <div class="mt-8 pt-8 border-t border-gray-100">
              <div class="flex items-center justify-between mb-6 p-4 bg-gray-50 rounded-2xl">
                <span class="text-sm font-bold text-gray-500 uppercase">公開ステータス</span>
                <% if @recipe.is_public %>
                  <span class="flex items-center gap-1.5 px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-bold">
                    <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                    公開中
                  </span>
                <% else %>
                  <span class="flex items-center gap-1.5 px-3 py-1 bg-gray-200 text-gray-600 rounded-full text-xs font-bold">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                    非公開（自分のみ）
                  </span>
                <% end %>
              </div>
            </div>

            <p class="mt-2 ml-1 text-[11px] text-gray-400">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline mr-0.5 mb-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              公開設定は、下の「編集する」ボタンから変更できます
            </p>
          <% end %>


          <% if @recipe.user == current_user %>
            <div class="flex gap-4 mt-8 pt-8 border-t border-gray-100">
              <%# 編集ボタン %>
              <%= link_to edit_recipe_path(@recipe), class: "flex-1 text-center bg-green-100 hover:bg-green-200 text-gray-700 font-bold py-3 rounded-xl transition-all" do %>
                編集する
              <% end %>

              <%= link_to recipe_path(@recipe), 
                  data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, 
                  class: "flex-1 text-center bg-red-50 hover:bg-red-100 text-red-600 font-bold py-3 rounded-xl transition-all" do %>
                削除する
              <% end %>
            </div>
          <% end %>

          <%= link_to recipes_path, class: "block text-center text-gray-500 font-bold bg-gray-100 hover:bg-blue-200 py-4 rounded-2xl transition-colors mt-4" do %>
            <div class="flex items-center justify-center gap-2">
              一覧に戻る
            </div>
          <% end %>        
        </div>
      </div>
    </div>
  </div>
</div>
